<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="4dp"
    app:cardCornerRadius="@dimen/cardCornerRadius_8"
    android:layout_marginBottom="@dimen/margin_bottom_20"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="@color/white">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="@dimen/margin_left_10"
                android:layout_marginTop="@dimen/margin_top_10"
                android:src="@drawable/img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dateTv"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="@string/_22_aug_2022"
                android:layout_marginLeft="@dimen/margin_left_10"
                android:textColor="@color/grey"
                android:textSize="@dimen/small_text_size_12"
                app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView"
                app:layout_constraintStart_toEndOf="@+id/appCompatImageView" />

            <TextView
                android:id="@+id/titleTv"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_24"
                android:layout_marginLeft="@dimen/margin_left_10"
                android:maxLines="1"
                android:text="@string/sample_link_name"
                android:textColor="@color/black"
                android:textSize="@dimen/med_text_size"
                app:layout_constraintEnd_toStartOf="@+id/countTv"
                app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
                app:layout_constraintTop_toTopOf="@+id/appCompatImageView" />


            <TextView
                android:id="@+id/countTv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_24"
                android:text="@string/_123"
                android:layout_marginEnd="@dimen/margin_right_20"
                android:layout_marginTop="@dimen/margin_top_10"
                android:textColor="@color/black"
                android:textSize="@dimen/med_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/clicks"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_24"
                android:text="@string/clicks"
                android:textColor="@color/grey"
                android:textSize="@dimen/med_text_size"
                android:layout_marginRight="@dimen/margin_right_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/countTv" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/faqBackgroudColor">

            <TextView
                android:id="@+id/linksTv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_24"
                android:maxLines="1"
                android:text="@string/sample_link"
                android:textColor="@color/app_theme"
                android:textSize="@dimen/med_text_size"
                android:layout_marginLeft="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.081"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.516" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/copyIv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_files__1_"
                android:layout_marginRight="@dimen/margin_right_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>